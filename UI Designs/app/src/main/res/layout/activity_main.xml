<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.cocum.android.MainActivity">

    <io.cocum.android.Typeface.TypeFacedTextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_label"
        android:textSize="60sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d18e3b"
        android:fontFamily="sans-serif-light"
        android:text="Co-Cum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp" />

    <io.cocum.android.Typeface.TypeFacedTextViewMedium
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:gravity="center_horizontal"
        android:text="A corporate daily commute solution"
        android:layout_below="@id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
